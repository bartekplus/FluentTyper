{
  "env": {
    "browser": true,
    "webextensions": true,
    "es6": true
  },
  "extends": ["standard", "prettier", "prettier/standard"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "sourceType": "module",

    "ecmaVersion": 11
  },
  "rules": {
    "no-var" : 1,
    "prettier/prettier": ["error"]
  }
}
