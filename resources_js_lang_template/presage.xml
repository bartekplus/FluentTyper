<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<Presage>
    <PredictorRegistry>
        <LOGGER>$LOGGER</LOGGER>
        <PREDICTORS>DefaultSmoothedNgramTriePredictor DefaultAspellPredictor DefaultHunspellPredictor DefaultAbbreviationExpansionPredictor DefaultRecencyPredictor</PREDICTORS>
    </PredictorRegistry>
    <ContextTracker>
        <LOGGER>$LOGGER</LOGGER>
        <SLIDING_WINDOW_SIZE>0</SLIDING_WINDOW_SIZE>
	<LOWERCASE_MODE>yes</LOWERCASE_MODE>
	<ONLINE_LEARNING>no</ONLINE_LEARNING>
    </ContextTracker>
    <Selector>
        <LOGGER>$LOGGER</LOGGER>
        <SUGGESTIONS>6</SUGGESTIONS>
        <REPEAT_SUGGESTIONS>no</REPEAT_SUGGESTIONS>
        <GREEDY_SUGGESTION_THRESHOLD>0</GREEDY_SUGGESTION_THRESHOLD>
    </Selector>
    <PredictorActivator>
        <LOGGER>$LOGGER</LOGGER>
        <PREDICT_TIME>1000</PREDICT_TIME>
        <MAX_PARTIAL_PREDICTION_SIZE>60</MAX_PARTIAL_PREDICTION_SIZE>
        <COMBINATION_POLICY>Meritocracy</COMBINATION_POLICY>
    </PredictorActivator>
    <ProfileManager>
        <LOGGER>$LOGGER</LOGGER>
        <AUTOPERSIST>false</AUTOPERSIST>
    </ProfileManager>
    <Predictors>
        <DefaultSmoothedNgramTriePredictor>
            <PREDICTOR>SmoothedNgramTriePredictor</PREDICTOR>
            <LOGGER>$LOGGER</LOGGER>
            <DBFILENAME>/resources_js/${LANG_VARIANT}/ngrams_db</DBFILENAME>
            <DELTAS>0.125 0.25 0.5 0.75</DELTAS>
            <COUNT_THRESHOLD>0</COUNT_THRESHOLD>
            <DatabaseConnector>
                <LOGGER>$LOGGER</LOGGER>
            </DatabaseConnector>
        </DefaultSmoothedNgramTriePredictor>
        <DefaultRecencyPredictor>
            <PREDICTOR>RecencyPredictor</PREDICTOR>
            <LOGGER>$LOGGER</LOGGER>
            <LAMBDA>2</LAMBDA>
            <N_0>0.00001</N_0>
            <CUTOFF_THRESHOLD>20</CUTOFF_THRESHOLD>
        </DefaultRecencyPredictor>
        <DefaultHunspellPredictor>
            <PREDICTOR>HunspellPredictor</PREDICTOR>
            <LOGGER>$LOGGER</LOGGER>
            <DICTIONARYBASE>/resources_js/${LANG_VARIANT}/hunspell/$LANG_VARIANT</DICTIONARYBASE>
            <PROBABILITY>0.00000001</PROBABILITY>
        </DefaultHunspellPredictor>
        <DefaultAspellPredictor>
            <PREDICTOR>AspellPredictor</PREDICTOR>
            <LOGGER>$LOGGER</LOGGER>
            <LANG>$LANG_VARIANT</LANG>
            <MASTER>/resources_js/${LANG_VARIANT}/aspell/$LANG_ASPELL.multi</MASTER>
            <PROBABILITY>0.00000001</PROBABILITY>
        </DefaultAspellPredictor>
        <DefaultAbbreviationExpansionPredictor>
            <PREDICTOR>AbbreviationExpansionPredictor</PREDICTOR>
            <LOGGER>$LOGGER</LOGGER>
            <ABBREVIATIONS>/resources_js/common/abbreviations.txt</ABBREVIATIONS>
            <PREPEND_BACKSPACES>no</PREPEND_BACKSPACES>
        </DefaultAbbreviationExpansionPredictor>
    </Predictors>
</Presage>
